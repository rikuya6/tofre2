<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2>保存に失敗しました。管理者に問い合わせてください。</h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :refrigerator_id %><br>
    <%= f.text_field :refrigerator_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :event_id %><br>
    <%= f.text_field :event_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
