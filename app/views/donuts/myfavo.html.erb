<div>
<p id="notice"><%= notice %></p>

<div class="headline"><h1>お気に入り</h1></div>

<%= render 'shared/donuts_header' %>

<table class="donutslist">
  <% @fabs.each do |fab| %>
    <tr>
      <td class="width_resize"><%= donut_image_tag fab.donut , width: 100 %></td>
      <td style="width: 300px; word-break: break-all; vertical-align: top; border-bottom-style: solid; border-color: orange;" class="width_resize">
      	<div class="donut_headline"><h2><%= link_to "#{fab.donut.title}", fab.donut %></h2></div>
      	<%= fab.donut.material %>
      </td>
      <td style="width:150px;" class="width_resize"><h3><%= link_to '[はずす]', unfab_donut_path(fab.donut) %></h3></td>
    </tr>
  <% end %>
</table>

<br>
</div>