<div class="headline">
  <h1>イベントの編集</h1>
</div>

<div class="form_area">
  <strong>主催者:</strong>
  <%= @event.user_name %>
</div>
<div class="form_area">
  <strong>食材:</strong>
  <% @event.refrigerators.each do |re| %>
    <br><%= re.name %> (by <%= re.user.username%>)
    <% if re.user == current_user %>
      <%= link_to '[取消]', addition_event_path(@event, refri: re.id, dele: 1) %>
    <% end %>
  <% end %>

  <% if List.find_by(user_id: current_user.id, event_id: @event.id, delete_flag: false) %>
    <br><%= link_to '[食材追加]', event_path(add: "a") %>
  <% end %>
  <% if params[:add] %>
    <br><%= render "addition" , eve: @event %>
  <% end %>
</div>
<div class="form_area">
  <strong>場所:</strong>
  <%= @event.place %>
</div>
<div class="form_area">
  <strong>参加者</strong><br>
  <%= @event.refrigerators.first.user.username %><br>
  <% List.where(event_id: @event.id, delete_flag: false).each do |list| %>
    <%= list.user.username %>
  <% end %>
</div>
<div class="form_area">
  <strong>日時:</strong>
  <%= @event.date.to_date %>
</div>
<div class="form_area">
  <strong>最大人数:</strong>
  <%= @event.upper_num %>
</div>
<div class="form_area">
  <strong>最低人数:</strong>
  <%= @event.lower_num %>
</div>

<%= link_to '戻る', events_path %>